# =============================================================================
# TRADINGVIEW AUTHENTICATION
# =============================================================================
# Cómo obtener tu SessionID:
# 1. Abre TradingView en tu navegador (Chrome/Firefox)
# 2. Presiona F12 para abrir DevTools
# 3. Ve a la pestaña "Application" > "Cookies" > https://www.tradingview.com
# 4. Busca la cookie llamada "sessionid" y copia su valor
# CRÍTICO: Si este valor expira, el bot dejará de funcionar
TV_SESSION_ID=your_session_id_here

# =============================================================================
# TELEGRAM API CONFIGURATION
# =============================================================================
# URL base de tu API personalizada de Telegram
TELEGRAM_API_URL=https://api.tu-dominio.com/telegram

# API Key para autenticación (Header: x-api-key)
TELEGRAM_API_KEY=your_telegram_api_key_here

# Chat ID o canal donde se enviarán las alertas
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# TRADINGVIEW WEBSOCKET CONFIGURATION
# =============================================================================
# URL del WebSocket de TradingView (NO MODIFICAR a menos que cambien su infraestructura)
TV_WS_URL=wss://data.tradingview.com/socket.io/websocket

# Origin header requerido para bypass Anti-WAF
TV_WS_ORIGIN=https://data.tradingview.com

# User-Agent (rotativo en código, este es el fallback)
TV_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Número de velas históricas a solicitar para inicialización de EMA
SNAPSHOT_CANDLES=1000

# Periodo de la EMA para filtro de tendencia
EMA_PERIOD=200

# Ventana de tiempo (segundos) para confirmación Dual-Source
DUAL_SOURCE_WINDOW=2.0

# Timeout de reconexión inicial (segundos)
RECONNECT_INITIAL_TIMEOUT=5

# Timeout máximo de reconexión (segundos)
RECONNECT_MAX_TIMEOUT=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Nivel de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Ruta del archivo de logs (dejar vacío para solo consola)
LOG_FILE=logs/trading_bot.log
