# =============================================================================
# Trading Bot Configuration Template
# =============================================================================
# Copy this file to .env and fill in your credentials
#
# IMPORTANT: Never commit .env to version control!
#
# =============================================================================

# -----------------------------------------------------------------------------
# DATA PROVIDER SELECTION
# -----------------------------------------------------------------------------
# Which data provider to use: "TRADINGVIEW" or "IQOPTION"
DATA_PROVIDER=TRADINGVIEW

# -----------------------------------------------------------------------------
# IQ OPTION CONFIGURATION (Only needed if DATA_PROVIDER=IQOPTION)
# -----------------------------------------------------------------------------
IQ_OPTION_USER=miqueasdavidgentile1@gmail.com
IQ_OPTION_PASS=
IQ_ASSET=EURUSD-OTC

# -----------------------------------------------------------------------------
# TRADINGVIEW CONFIGURATION (Only needed if DATA_PROVIDER=TRADINGVIEW)
# -----------------------------------------------------------------------------
TV_SESSION_ID=your_session_id_here
TV_WS_URL=wss://data.tradingview.com/socket.io/websocket
TV_WS_ORIGIN=https://data.tradingview.com
SNAPSHOT_CANDLES=1000

# -----------------------------------------------------------------------------
# TELEGRAM NOTIFICATIONS
# -----------------------------------------------------------------------------
TELEGRAM_API_URL=https://your-api-gateway.execute-api.region.amazonaws.com/prod/telegram
TELEGRAM_API_KEY=your_api_key_here
TELEGRAM_SUBSCRIPTION=trading_signals
TELEGRAM_OUTCOME_SUBSCRIPTION=trading_signals
ENABLE_NOTIFICATIONS=true
SEND_CHARTS=true
SAVE_NOTIFICATIONS_LOCALLY=false

# -----------------------------------------------------------------------------
# TRADING PARAMETERS
# -----------------------------------------------------------------------------
EMA_FAST_PERIOD=7
EMA_PERIOD=200
DUAL_SOURCE_WINDOW=2.0
CHART_LOOKBACK=30
USE_TREND_FILTER=false
SHOW_CANDLE_RESULT=true

# -----------------------------------------------------------------------------
# RECONNECTION STRATEGY
# -----------------------------------------------------------------------------
RECONNECT_INITIAL_TIMEOUT=5
RECONNECT_MAX_TIMEOUT=300

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
# LOG_FILE=trading_bot.log  # Uncomment to save logs to file
